pipeline{
	agent any
	stages{
		stage('one'){
			steps{
				echo 'Hi, This is dharmender'
				}
			}
		stage('two'){
			steps{
				inpurt('do you want to proceed?')
				}
			}
		stage('three'){
			when{
				not{
					branch "master"
					}	
				}
			steps{
				echo "hello"
				}
			}
		stage('four'){
			parallel{
				stage('unit test'){
					steps{
						echo "runnit the unit test..."
						}
					}
				stage('Integration test'){
					agent{
						docker{
							reuseNode false
							image 'ubuntu'
							}
						}
						steps{
							echo "running the integration test..."
							}
						}
					}
				}
		
	}
}
